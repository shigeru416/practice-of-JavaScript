<section class="editing-box">
<% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibted this book from being saved:</h2>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
  </div>
 <% end %>
<h1 class="editing-title">Editing Book</h1>

<%= form_for(@book) do |f| %>
   <h4 class="form-title">Title</h4>
	<%= f.text_field :title %>
   <h4 class="form-body">Body</h4>
	<%= f.text_area :body %>

	<p class="update-button"><%= f.submit 'Update Book' %></p>
	<div class="links-edithtml">
	  <div class="Links-box">
		<P class="Show-Back-link">
			<%= link_to "Show", book_path %> | <%= link_to "Back", books_path %>
		</P>
	  </div>
	</div>
<% end %>
</section>