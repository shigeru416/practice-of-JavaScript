<P id="notice">
	<%= notice %>
</P>

<section class="index">
 <h1 class="index-title">Books</h1>
 <div class="table-box">
  <table>
    <tr>
     <th class="table-title">Title</th>
     <th class="table-body">Body</th>
    </tr>
    <% @books.each do |book| %>
     <tr class="table-content">
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to "Show", book_path(book.id) %></td>
       <td><%= link_to "Edit", edit_book_path(book.id) %></td>
       <td><%= link_to "Destroy", book_path(book.id), method: :delete %></td>
     </tr>
    <% end %>
  </table>
 </div>
</section>

<section class="new">
 <% if @book.errors.any? %>
  <div id="error_explanation">
    <h2><%= @book.errors.count %>errors prohibted this book from being saved:</h2>
      <ul>
       <% @book.errors.full_messages.each do |message| %>
       <li><%= message %></li>
       <% end %>
      </ul>
  </div>
 <% end %>
 <h1 class="new-title">New Book</h1>
  <%= form_for(@book) do |f| %>
	<h4 class="title-text">Title</h4>
	<%= f.text_field :title %>
	<h4 class="body-text">Body</h4>
	<%= f.text_area :body %>

	<div class="new-create-button"><%= f.submit 'Create Book' %></div>
  <% end %>
</section>